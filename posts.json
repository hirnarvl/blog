---
layout: null
---
[{% for post in site.posts %}
  {
    "url": "{{ post.url | replace:'index.html','' | prepend: site.baseurl | prepend: site.url }}",
    "author": [{ "given": "{{ site.data.authors[post.author].given }}",
                "family": "{{ site.data.authors[post.author].family }}",
                "orcid": "{{ site.data.authors[post.author].orcid }}" }],
    "title": "{{ post.title }}",
    "container-title": "{{ site.title }}",
    "issued": "{{ post.date | date_to_xmlschema }}",
    "tags": {{ post.tags | jsonify }},
    "description": {% if post.description %}{{ post.description | rstrip | jsonify }}{% else %}{{ post.excerpt | strip_html | rstrip | truncatewords: 50 | jsonify }}{% endif %}
  } {% if forloop.last %}{% else %},{% endif %}{% endfor %}
]
