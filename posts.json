---
layout: null
---
[{% for post in site.posts %}
  {
    "url": "{{ post.url }}",
    "title": "{{ post.title }}",
    "date": "{{ post.date | date_to_xmlschema }}",
    "tags": {{ post.tags | jsonify }},
    "description": {{ post.description | jsonify }},
    "content": {{ post.content | jsonify }}
  } {% if forloop.last %}{% else %},{% endif %}{% endfor %}
]
