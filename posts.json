---
layout: null
---
[{% for post in site.posts %}
  {
    "url": "{{ post.url | replace:'index.html','' | prepend: site.baseurl | prepend: site.url }}",
    "author": "{{ site.data.authors[post.author].name }}",
    "title": "{{ post.title }}",
    "container-title": "{{ site.title }}",
    "issued": "{{ post.date | date_to_xmlschema }}",
    "tags": {{ post.tags | jsonify }},
    "description": {% if post.description %}{{ post.description | jsonify }}{% else %}{{ post.excerpt | strip_html | truncatewords: 50 | jsonify }}{% endif %}
  } {% if forloop.last %}{% else %},{% endif %}{% endfor %}
]
